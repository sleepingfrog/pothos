<h1>Candies#new</h1>
<p>Find me in app/views/candies/new.html.erb</p>

<%= form_with(model: @candy, url: candies_path, method: :post, local: true ) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :price %>
  <%= form.number_field :price %>

  <%= form.label :wrap_paper %>
  <%= form.file_field :wrap_paper %>

  <%= form.submit %>
<% end %>
